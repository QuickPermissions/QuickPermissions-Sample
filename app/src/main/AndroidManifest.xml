<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livinglifetechway.quickpermissions_sample">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".java.AutoHandleJavaActivity" />
        <activity android:name=".java.ManageRationaleJavaActivity" />
        <activity android:name=".java.ManagePeranentlyDeniedJavaActivity" />
        <activity android:name=".java.HandleAllCallbackJavaActivity" />
        <activity android:name=".java.CustomMessageJavaActivity" />
        <activity android:name=".java.DoNotHandleJavaActivity" />
        <activity android:name=".kotlin.AllKotlinActivity" />
        <activity
            android:name=".kotlin.fragment.FragmentExampleWithKotlinActivity"
            android:label="@string/title_activity_fragment_example_with_kotlin"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>